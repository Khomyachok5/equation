<div id="chart"></div>

<div id="answer">
  <%= @answer %>
</div>

<div id="coordinates">
  <%- @points.each_with_index do |point, index| %>
    <%= "The additional point number #{index+1} found for the parabola has the following co-ordinates: #{point}"%>
    <%= content_tag :div, '', id: "element_name_#{index}", data: {x: point.each_key.first} do %>
    <% end %>
    <%= content_tag :div, '', id: "element_y_name_#{index}", data: {y: point.each_value.first} do %>
    <% end %>
    <br>
  <% end %>
</div>

<div id="vertext">
  <%= content_tag :div, '', id: "vertex_x", data: {x: @vertex.first} do %>
  <% end %>
  <%= content_tag :div, '', id: "vertex_y", data: {y: @vertex.second} do %>
  <% end %>
</div>

